<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <system.serviceModel>
    <services>
      <service name="PublicTransport.Services.CityService" behaviorConfiguration="PublicTransport.Services.CityServiceBehavior">
        <endpoint address="http://localhost:8733/cities" binding="basicHttpBinding" contract="PublicTransport.Services.Interfaces.ICityService" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="PublicTransport.Services.CityServiceBehavior">
          <!-- To avoid disclosing metadata information, 
          set the values below to false before deployment -->
          <serviceMetadata httpGetUrl="http://localhost:8733/cities" httpGetEnabled="True" httpsGetEnabled="True"/>
          <!-- To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>